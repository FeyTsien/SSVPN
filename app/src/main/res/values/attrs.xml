<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorCircleView">
        <attr name="circle_color" format="color" />
        <attr name="stroke_width" format="integer" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <!-- format="reference"意为参考某一资源ID -->
        <attr name="right_id" format="reference" />
    </declare-styleable>

    <!-- 标题属性（图片选择器用到） -->
    <declare-styleable name="TitleAttr">
        <attr name="title_name" format="reference|string"/>
        <attr name="title_text_color" format="reference|color"/>
        <attr name="title_drawable_right" format="reference"/>
        <attr name="title_drawable_left" format="reference"/>
        <attr name="title_text_size" format="reference|dimension"/>
        <attr name="left_text" format="reference|string"/>
        <attr name="left_image" format="reference"/>
        <attr name="small_text_size" format="reference|dimension"/>
        <attr name="title_gravity">
            <enum name="left" value="3"/>
            <enum name="center" value="17"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="right_image" format="reference"/>
        <attr name="right_text" format="reference|string"/>
        <attr name="right_image_two" format="reference"/>
        <attr name="right_text_two" format="reference|string"/>
        <attr name="title_height" format="dimension"/>
        <attr name="right_text_drawable_right" format="reference"/>
        <attr name="right_text_drawable_left" format="reference"/>
        <attr name="right_text_two_drawable_right" format="reference"/>
        <attr name="right_text_two_drawable_left" format="reference"/>
        <attr name="left_text_drawable_right" format="reference"/>
        <attr name="left_text_drawable_left" format="reference"/>
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>

    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

     <!--闪动的文字-->
    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color"/>
    </declare-styleable>

    <!--圆角ImageView-->
    <attr name="borderRadius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius"/>
        <attr name="type"/>
    </declare-styleable>

    <!--引导页-->
    <declare-styleable name="gradient">
        <attr name="transition_drawable" format="enum"/>
        <attr name="transition_duration" format="integer"/>
    </declare-styleable>


    <!--下拉刷新上拉加载-->
    <declare-styleable name="PullRefreshLayout">
        <attr name="refreshMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>

    <!--环形进度条-->
    <declare-styleable name="CircleImageView2">
        <attr name="android:src" />
        <attr name="android:color" />
        <attr name="android:indeterminate"/>
        <attr name="android:progress"/>
        <attr name="android:max"/>
        <attr name="android:shadowDx"/>
        <attr name="android:shadowDy"/>
        <attr name="android:shadowRadius"/>
        <attr name="android:shadowColor"/>
        <attr name="android:indeterminateDuration"/>
        <attr name="fbb_progressColor" format="reference|color"/>
        <attr name="fbb_autoStart" format="boolean" />
        <attr name="fbb_animSteps" format="integer" />
        <attr name="fbb_progressWidthRatio" format="float" />
        <attr name="fbb_endBitmap" format="reference" />
        <attr name="fbb_showEndBitmap" format="boolean" />
        <attr name="fbb_hideProgressOnComplete" format="boolean" />
        <attr name="fbb_showShadow" format="boolean" />
    </declare-styleable>
</resources>